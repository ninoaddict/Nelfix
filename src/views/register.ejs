<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="icon" href="/images/logo.png">
  <script src="https://kit.fontawesome.com/d0a301b89a.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"></script>
  <title>Login</title>
</head>

<body class="bg-slate-900 text-gray-100">
  <main class="min-h-[89vh] flex flex-col items-center justify-center px-5 my-10">
    <section id="title" class="flex justify-center gap-1 mb-6">
      <img src="/images/logo.png" class="h-10 md:h-12 lg:h-[60px]">
      <h1 class="text-4xl font-extrabold leading-none tracking-tight md:text-5xl lg:text-6xl text-slate-200">Nelfix
      </h1>
    </section>
    <section id="form" class="flex flex-col items-center gap-2 bg-slate-800 p-6 md:p-8 rounded-lg w-full max-w-sm">
      <h1 class="lg:text-3xl font-semibold text-2xl text-slate-200">Register</h1>
      <form class="max-w-sm mx-auto w-full">
        <div class="mb-5">
          <label for="email" class="block mb-2 text-sm font-medium text-white">Email</label>
          <input type="text" id="email" class="border text-sm rounded-lg block w-full p-2 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" />
          <p id="email-error" class="mt-2 text-xs text-red-400"></p>
        </div>
        <div class="mb-5">
          <label for="username" class="block mb-2 text-sm font-medium text-white">Username</label>
          <input type="text" id="username" class="border text-sm rounded-lg block w-full p-2 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" />
          <p id="username-error" class="mt-2 text-xs text-red-400"></p>
        </div>
        <div class="mb-5">
          <label for="first_name" class="block mb-2 text-sm font-medium text-white">First Name</label>
          <input type="text" id="first_name" class="border text-sm rounded-lg block w-full p-2 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" />
          <p id="first_name-error" class="mt-2 text-xs text-red-400"></p>
        </div>
        <div class="mb-5">
          <label for="last_name" class="block mb-2 text-sm font-medium text-white">Last Name</label>
          <input type="text" id="last_name" class="border text-sm rounded-lg block w-full p-2 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" />
          <p id="last_name-error" class="mt-2 text-xs text-red-400"></p>
        </div>
        <div class="mb-5">
          <label for="password" class="block mb-2 text-sm font-medium text-white">
            Password</label>
          <input type="password" id="password" class="border text-sm rounded-lg block w-full p-2 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" />
          <p id="password-error" class="mt-2 text-xs text-red-400"></p>
        </div>
        <button type="submit" id="submit-button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Submit</button>
      </form>
      <div class="mx-auto my-1 flex w-full items-center justify-evenly
          before:mr-4 before:block before:h-px before:flex-grow before:bg-stone-400
          after:ml-4 after:block after:h-px after:flex-grow after:bg-stone-400 text-slate-100">
        or
      </div>
      <p class="text-center text-sm text-gray-400">
        If you already have an account, please
        <a href="/auth/login" class="text-blue-500 hover:underline">
          login
        </a>
      </p>
    </section>
    <div id="toast-danger" class="hidden fixed bottom-24" role="alert">
      <div class="items-center w-full flex max-w-xs p-4 mb-4 text-gray-500 bg-white rounded-lg shadow dark:text-gray-400 dark:bg-gray-800" role="alert">
        <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-red-500 bg-red-100 rounded-lg dark:bg-red-800 dark:text-red-200">
          <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 11.793a1 1 0 1 1-1.414 1.414L10 11.414l-2.293 2.293a1 1 0 0 1-1.414-1.414L8.586 10 6.293 7.707a1 1 0 0 1 1.414-1.414L10 8.586l2.293-2.293a1 1 0 0 1 1.414 1.414L11.414 10l2.293 2.293Z" />
          </svg>
          <span class="sr-only">Error icon</span>
        </div>
        <div class="ms-3 text-sm font-normal" id="error-text"></div>
        <button type="button" class="ms-auto -mx-1.5 -my-1.5 bg-white text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex items-center justify-center h-8 w-8 dark:text-gray-500 dark:hover:text-white dark:bg-gray-800 dark:hover:bg-gray-700" data-dismiss-target="#toast-danger" aria-label="Close">
          <span class="sr-only">Close</span>
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
          </svg>
        </button>
      </div>
    </div>
  </main>

  <script type="module">
    import {
      validateEmail,
      validateUsername,
      validatePassword,
      validateFirstName,
      validateLastName
    } from '/script/index.js';

    async function onSubmit(e) {
      e.preventDefault();
      document.getElementById('submit-button').disabled = true;
      document.getElementById('submit-button').innerHTML = '<div role="status"><svg aria-hidden="true" class="w-5 h-5 animate-spin text-gray-600 fill-blue-600" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/><path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/></svg><span class="sr-only">Loading...</span></div>';
      const username = document.getElementById('username').value;
      const password = document.getElementById('password').value;
      const email = document.getElementById('email').value;
      const first_name = document.getElementById('first_name').value;
      const last_name = document.getElementById('last_name').value;

      let isValid = true;

      const uval = validateUsername(username);
      document.getElementById('username-error').innerText = uval;
      if (uval) {
        isValid = false;
        document.getElementById('username').classList.remove('border-gray-600');
        document.getElementById('username').classList.add('border-red-600');
      } else {
        document.getElementById('username').classList.add('border-gray-600');
        document.getElementById('username').classList.remove('border-red-600');
      }

      const pval = validatePassword(password, 8);
      document.getElementById('password-error').innerText = pval;
      if (pval) {
        isValid = false;
        document.getElementById('password').classList.remove('border-gray-600');
        document.getElementById('password').classList.add('border-red-600');
      } else {
        document.getElementById('password').classList.add('border-gray-600');
        document.getElementById('password').classList.remove('border-red-600');
      }

      const emval = validateEmail(email);
      document.getElementById('email-error').innerText = emval;
      if (emval) {
        isValid = false;
        document.getElementById('email').classList.remove('border-gray-600');
        document.getElementById('email').classList.add('border-red-600');
      } else {
        document.getElementById('email').classList.add('border-gray-600');
        document.getElementById('email').classList.remove('border-red-600');
      }

      const fnval = validateFirstName(first_name);
      document.getElementById('first_name-error').innerText = fnval;
      if (fnval) {
        isValid = false;
        document.getElementById('first_name').classList.remove('border-gray-600');
        document.getElementById('first_name').classList.add('border-red-600');
      } else {
        document.getElementById('first_name').classList.add('border-gray-600');
        document.getElementById('first_name').classList.remove('border-red-600');
      }

      const lnval = validateLastName(last_name);
      document.getElementById('last_name-error').innerText = lnval;
      if (lnval) {
        isValid = false;
        document.getElementById('last_name').classList.remove('border-gray-600');
        document.getElementById('last_name').classList.add('border-red-600');
      } else {
        document.getElementById('last_name').classList.add('border-gray-600');
        document.getElementById('last_name').classList.remove('border-red-600');
      }

      if (!isValid) {
        document.getElementById('submit-button').innerHTML = "Submit";
        document.getElementById('submit-button').disabled = false;
        return;
      }

      const formData = new FormData();
      formData.append('username', username);
      formData.append('password', password);
      formData.append('email', email);
      formData.append('first_name', first_name);
      formData.append('last_name', last_name);

      try {
        const response = await fetch('/auth/register', {
          method: 'POST',
          body: formData,
        });

        document.getElementById('submit-button').innerHTML = "Submit";
        document.getElementById('submit-button').disabled = false;

        const data = await response.json();
        if (response.ok) {
          window.location.replace('/');
        } else {
          document.getElementById('error-text').innerHTML = data.message;
          document.getElementById('toast-danger').classList.remove('hidden');
        }
      } catch (error) {
        document.getElementById('submit-button').innerHTML = "Submit";
        document.getElementById('submit-button').disabled = false;
        document.getElementById('toast-danger').classList.remove('hidden');
      }
    }
    document.getElementById('form').addEventListener('submit', onSubmit);
  </script>

  <footer class="rounded-lg shadow bg-slate-800 py-5">
    <div class="w-full max-w-screen-xl mx-auto p-4">
      <span class="block text-sm text-center text-gray-400">© 2024 <a href="/" class="hover:underline">Nelfix™</a>. All
        Rights Reserved.</span>
    </div>
  </footer>
</body>

</html>